@page "/"

<PageTitle>Products</PageTitle>

<h1>Producsts</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p><a class="btn btn-primary" href="/create">Add new</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var products in products)
            {
                <tr>
                    <td>@products.Id</td>
                    <td>@products.Name</td>
                    <td>
                        <a href="/edit/@products.Id" class="btn btn-primary">Edit</a>
                        <button class="btn btn-primary" @onclick="() => Delete(products.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}